<div class="container">
  <h1 class="mt-5 pt-5">Página Usuário</h1>

  <div class="modal fade" id="modalEntrar" tabindex="-1" role="dialog" aria-labelledby="modalEntrarTitle"
    aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="modalEntrarTitle">Adicionar Pet</h5>
        </div>
        <div class="modal-body">
          <form action="/pet/add" method="POST">
            <div class="form-group">
              <label for="exampleInputEmail1">Nome</label>
              <input type="text" name="name" class="form-control" id="exampleInputEmail1"
                aria-describedby="emailHelp" required>
            </div>
            <div class="form-group">
              <label for="exampleInputPassword1">Espécie</label>
              <input type="select" name="password" class="form-control" id="exampleInputPassword1" required>
            </div>
            <button type="submit" class="btn-main">Entrar</button>
          </form>
        </div>
      </div>
    </div>
  </div>

</div>
